<Application x:Class="WSR_Petrov_Fedyaev.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WSR_Petrov_Fedyaev"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <!--Style for button-->
        <Style TargetType="Button" >
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="Background" Value="#A5E887"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <!--Style for TextBlock-->
        <Style TargetType="TextBlock" x:Key="StyleListView">
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        
        <Style x:Key="ImageSource" TargetType="Image">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Application.Resources>
</Application>
